@model List<Product>

<h1>Магазин</h1>
<p>Количество @Model.Count()</p>

<div class="row">
@foreach (Product p in Model)
{
     <div class="col-md-3">

         <div class="border bg-light rounded p-1">
             <div class="product-info">
                 <img src="~/img/@(p.ArtId).jpg" class="img-fluid" alt="@(p.Title)"/>
                 <h3>@p.Category - @p.Size</h3>
                 <ul class="product-props">
                     <li>Цена: @p.Price</li>
                     <li>Художник: @p.Artist</li>
                     <li>Название: @p.Title</li>
                     <li>Описание: @p.ArtDescription</li>
                 </ul>
                 <button id="buyButton" class="btn btn-success">Купить</button>
             </div>

         </div>
       </div>  

    
}

</div>